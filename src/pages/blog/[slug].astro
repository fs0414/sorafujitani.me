---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Intl.DateTimeFormat('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(post.data.pubDate);
---

<BlogLayout title={post.data.title} description={post.data.description}>
  <article class="blog-post">
    <header class="post-header">
      <a href="/blog" class="back-link">← Blog</a>
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
        <span class="separator">•</span>
        <span class="author">{post.data.author}</span>
      </div>
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="tags">
          {post.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="post-content">
      <Content />
    </div>
  </article>
</BlogLayout>

<style>
  .blog-post {
    max-width: 680px;
  }

  .back-link {
    display: inline-block;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 15px;
    margin-bottom: 24px;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .post-header {
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--color-border);
  }

  h1 {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;
    color: var(--color-heading);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
    color: var(--color-text-muted);
  }

  .separator {
    color: #6b7280;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 16px;
  }

  .tag {
    display: inline-block;
    padding: 4px 12px;
    background: var(--color-tag-bg);
    color: var(--color-text-secondary);
    font-size: 14px;
    border-radius: 16px;
  }

  .post-content {
    font-size: 18px;
    line-height: 1.8;
    color: var(--color-text);
  }

  /* Markdown content styles */
  .post-content :global(h1) {
    font-size: 32px;
    font-weight: 700;
    margin: 48px 0 24px;
    line-height: 1.2;
  }

  .post-content :global(h2) {
    font-size: 28px;
    font-weight: 700;
    margin: 40px 0 20px;
    line-height: 1.3;
  }

  .post-content :global(h3) {
    font-size: 24px;
    font-weight: 600;
    margin: 32px 0 16px;
    line-height: 1.3;
  }

  .post-content :global(p) {
    margin: 0 0 24px 0;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 0 0 24px 0;
    padding-left: 24px;
  }

  .post-content :global(li) {
    margin: 8px 0;
  }

  .post-content :global(code) {
    background: var(--color-code-bg);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    color: var(--color-code-text);
  }

  .post-content :global(pre) {
    background: var(--color-code-bg);
    color: var(--color-code-text);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 0 0 24px 0;
    position: relative;
  }

  .post-content :global(pre[data-filename]) {
    padding-top: 40px;
  }

  .post-content :global(pre[data-filename])::before {
    content: attr(data-filename);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 8px 16px;
    background: #3d3d3d;
    color: var(--color-text-muted);
    font-size: 13px;
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    border-radius: 8px 8px 0 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-content :global(pre code) {
    background: transparent;
    padding: 0;
    font-size: 14px;
    line-height: 1.6;
  }

  /* Syntax Highlighting */
  .post-content :global(pre code .keyword),
  .post-content :global(pre code .import),
  .post-content :global(pre code .export),
  .post-content :global(pre code .from),
  .post-content :global(pre code .return),
  .post-content :global(pre code .if),
  .post-content :global(pre code .for),
  .post-content :global(pre code .const),
  .post-content :global(pre code .let),
  .post-content :global(pre code .var),
  .post-content :global(pre code .function),
  .post-content :global(pre code .async),
  .post-content :global(pre code .await),
  .post-content :global(pre code .try),
  .post-content :global(pre code .catch),
  .post-content :global(pre code .throw) {
    color: var(--syntax-keyword);
    font-weight: 500;
  }

  .post-content :global(pre code .function-name),
  .post-content :global(pre code .method) {
    color: var(--syntax-function);
  }

  .post-content :global(pre code .string),
  .post-content :global(pre code .template-string) {
    color: var(--syntax-string);
  }

  .post-content :global(pre code .number),
  .post-content :global(pre code .boolean) {
    color: var(--syntax-number);
  }

  .post-content :global(pre code .comment) {
    color: var(--syntax-comment);
    font-style: italic;
  }

  .post-content :global(pre code .operator),
  .post-content :global(pre code .punctuation) {
    color: var(--syntax-operator);
  }

  .post-content :global(pre code .variable),
  .post-content :global(pre code .parameter) {
    color: var(--syntax-variable);
  }

  .post-content :global(pre code .constant),
  .post-content :global(pre code .class-name) {
    color: var(--syntax-constant);
  }

  .post-content :global(a) {
    color: var(--color-accent);
    text-decoration: none;
  }

  .post-content :global(a:hover) {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-border);
    padding-left: 20px;
    margin: 24px 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 24px 0;
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 48px 0;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 28px;
    }

    .post-content {
      font-size: 16px;
    }

    .post-content :global(h1) {
      font-size: 26px;
    }

    .post-content :global(h2) {
      font-size: 22px;
    }

    .post-content :global(h3) {
      font-size: 20px;
    }
  }
</style>
